<Window x:Class="Laboras22.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RegisterWindow" Height="300" Width="300">
    <StackPanel>
        <TextBlock x:Name="UserNameTextBlock" Text="User name" />
        <TextBox x:Name="UserNameTextBox" />
        <TextBlock x:Name="PasswordTextBlock" Text="Password" />
        <TextBox x:Name="PasswordTextBox" />
        <TextBlock x:Name="EmailTextBlock" Text="Email" />
        <TextBox x:Name="EmailTextBox" />
        <TextBlock x:Name="UserTypeTextBlock" Text="User type" />
        <ComboBox x:Name="UserTypeComboBox">
            <ComboBoxItem x:Name="StudentUserType" Content="Student" />
            <ComboBoxItem x:Name="LecturerUserType" Content="Lecturer" />
        </ComboBox>
        <Button x:Name="RegisterButton" Content="Register" />
    </StackPanel>
</Window>
